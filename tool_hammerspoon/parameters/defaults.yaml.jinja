# vim: ft=yaml
#
# Set default values.
---
values:
  lookup:
    pkg:
      name: homebrew/cask/hammerspoon
      manager: brew
    paths:
      confdir: '.hammerspoon'
      conffile: 'init.lua'
      xdg_dirname: 'hammerspoon'
      xdg_conffile: 'init.lua'
    rootgroup: {{ salt['cmd.run']("stat -f '%Sg' /dev/console") }}
    brew_prefix: '{{ salt["cmd.run_stdout"]("brew --prefix") }}'
    brew_user: '{{ salt["cmd.run_stdout"]("id -n -u $(stat -f \"%u\" \"$(brew --prefix)\"/bin/brew)",
      python_shell=True) }}'
...
